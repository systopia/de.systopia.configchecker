<?xml version="1.0"?>
<extension key="de.systopia.configchecker" type="module">
  <file>configchecker</file>
  <name>Config Checker</name>
  <description>Verifies config paramters vs configured ones</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Philipp Batroff</author>
    <email>batroff@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.configchecker</url>
    <url desc="Documentation">https://github.com/systopia/de.systopia.configchecker</url>
    <url desc="Support">https://github.com/systopia/de.systopia.configchecker</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2024-05-08</releaseDate>
  <version>1.0-beta1</version>
  <develStage>beta</develStage>
  <compatibility>
    <ver>5.27</ver>
  </compatibility>
  <comments>Currently only PHP parameters at runtime can be checked and verified. If configured, an Notification Email can be sent either when visiting the status site or once a day.</comments>
  <civix>
    <namespace>CRM/Configchecker</namespace>
    <format>23.02.1</format>
  </civix>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty-v2@1.0.1</mixin>
  </mixins>
  <classloader>
    <psr0 prefix="CRM_" path="."/>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
</extension>
